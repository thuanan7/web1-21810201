<div class="row text-center py-5">
    {{#each data}}
    <div class="col-lg-3 col-md-6 col-sm-12">
        <img src="{{imagepath}}" alt="{{name}}" onmouseover="setActiveImagePath(this, '{{imagepath}}')"
            onmouseout="setActiveImagePath(this, '{{imagepath}}', true)" />
        <h3>{{name}}</h3>
        <p class="text-black-50">
            {{summary}}
        </p>
        <a class="readmore btn btn-link pt-0" href="#"
            onclick="getData('products/{{id}}', 'details-template', 'content')">Read more</a>
    </div>
    {{/each}}
</div>